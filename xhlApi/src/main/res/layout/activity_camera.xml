<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorDark"
    tools:context=".vp.camera.CameraActivity">



    <SurfaceView
        android:id="@+id/surfaceView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"/>


    <RelativeLayout
        android:id="@+id/controller"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp">
        <api.pot.gl.xiv.XImageView
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            app:xiv_border_color="@color/colorAccent"
            app:xiv_border_width="10dp"
            android:id="@+id/done"
            app:xiv_circle_background_color="@color/colorAccent"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_done_all_"
            android:layout_marginRight="5dp"/>
        <api.pot.gl.xiv.XImageView
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            app:xiv_border_color="@color/colorGray"
            app:xiv_border_width="5dp"
            app:xiv_internal_border_width="0dp"
            app:xiv_internal_border_color="@color/transparent"
            android:id="@+id/shoot"
            app:xiv_circle_background_color="@color/transparent"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/ic_fiber_manual_record_red"
            android:layout_marginRight="5dp"/>
        <api.pot.gl.xiv.XImageView
            android:layout_alignParentBottom="true"
            app:xiv_border_color="@color/colorAccent"
            app:xiv_border_width="10dp"
            android:id="@+id/clear"
            app:xiv_circle_background_color="@color/colorAccent"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_clear_all_"
            android:layout_marginRight="5dp"/>
    </RelativeLayout>

</RelativeLayout>