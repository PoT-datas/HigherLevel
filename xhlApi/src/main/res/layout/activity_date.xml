<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/mainInfos"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/access"
        android:layout_toLeftOf="@+id/edit"
        android:gravity="center_vertical"
        android:layout_margin="10dp"
        android:orientation="vertical">
        <api.pot.text.xtv.XTextView
            app:xtv_single_line="true"
            android:id="@+id/label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Label"
            style="@style/textLabel4"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/mainInfos">
            <CalendarView
                android:id="@+id/calendarView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <RelativeLayout
                android:layout_below="@+id/calendarView"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:layout_centerHorizontal="true"
                android:orientation="horizontal">
                <api.pot.gl.xiv.XImageView
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    app:xiv_border_color="@color/colorAccent"
                    app:xiv_border_width="10dp"
                    android:id="@+id/more"
                    app:xiv_circle_background_color="@color/colorAccent"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_done_all_"
                    android:layout_marginRight="5dp"/>
                <api.pot.gl.xiv.XImageView
                    android:layout_alignParentBottom="true"
                    app:xiv_border_color="@color/colorAccent"
                    app:xiv_border_width="10dp"
                    android:id="@+id/camera"
                    app:xiv_circle_background_color="@color/colorAccent"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_clear_all_"
                    android:layout_marginRight="5dp"/>
            </RelativeLayout>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignLeft="@+id/mainInfos">
            <api.pot.gl.xiv.XImageView
                android:id="@+id/sign1"
                app:xiv_enabled_circular_transformation="false"
                android:background="@color/colorSpecific2"
                android:alpha="0.5"
                app:xiv_alpha="0.5"
                android:layout_width="@dimen/square"
                android:layout_height="@dimen/square"
                android:layout_marginRight="5dp"/>
            <api.pot.gl.xiv.XImageView
                android:id="@+id/sign2"
                app:xiv_enabled_circular_transformation="false"
                android:background="@color/colorSpecific3"
                android:alpha="0.5"
                app:xiv_alpha="0.5"
                android:layout_width="@dimen/square"
                android:layout_height="@dimen/square"
                android:layout_marginRight="5dp"/>
            <api.pot.gl.xiv.XImageView
                android:id="@+id/sign3"
                app:xiv_enabled_circular_transformation="false"
                android:background="@color/colorSpecific4"
                android:alpha="0.5"
                app:xiv_alpha="0.5"
                android:layout_width="@dimen/square"
                android:layout_height="@dimen/square"
                android:layout_marginRight="5dp"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>